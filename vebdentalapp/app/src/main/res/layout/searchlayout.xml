<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#ffffff">
        <!--  Header  Starts-->
        <LinearLayout android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/header_gradient"
            android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <!-- Logo Start-->
            <ImageView android:src="@drawable/dentalbanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"/>
            <!-- Logo Ends -->
        </LinearLayout>
        <!--  Header Ends -->
        <!-- Footer Start -->
        <LinearLayout android:id="@+id/footer"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:background="@layout/footer_repeat"
            android:layout_alignParentBottom="true">
        </LinearLayout>
        <!-- Footer Ends -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_below="@id/header">

    <TextView
        android:id="@+id/searchText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter Patient Mobile No"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_below="@id/header">

          <EditText
            android:id="@+id/patientId"
              android:layout_width="60dp"

              android:layout_height="wrap_content"
              android:layout_weight="0.25"
            android:layout_below="@+id/searchText"
            android:singleLine="true"
              android:inputType="number"
              android:maxLength="10"
            android:completionThreshold="1"/>
            <Button
                android:id="@+id/btnsearch"
                android:layout_width="60dp"

                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                android:ems="10"
                android:text="Search"
                android:inputType="number"
                android:textColor="@color/titleColor"
                android:background="@color/colorPrimaryDark"
                />

        </LinearLayout>


            <TextView
                android:id="@+id/imageName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/patientId"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imageName"
                android:gravity="center"
                />
    <TextView
        android:id="@+id/firstName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patientId"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:textSize="20sp"/>
            <TextView
                android:id="@+id/lastName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstName"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:textSize="20sp"/>
            <TextView
                android:id="@+id/gender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastName"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:textSize="20sp"/>
            <TextView
                android:id="@+id/dob"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastName"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txtAge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dob"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:textSize="20sp"/>


            <TextView
                android:id="@+id/treatments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dob"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:textSize="20sp"/>
            <TextView
                android:id="@+id/reportDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/treatments"
                android:layout_marginTop="10dp"
                android:gravity="center"

                android:textSize="20sp"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>